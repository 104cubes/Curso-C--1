    }
    else
    {
        cout <<"\n Usted no a ingresado por la opcion 1";
        system("clear");
        opcion = 0;
        PresentarMenu();
        }
    break;
   case 3:
    if (opcion = 2)
    {
        
        
        
    }
   
    // code block
    break; 
